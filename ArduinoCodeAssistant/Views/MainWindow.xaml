<Window
    x:Class="ArduinoCodeAssistant.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ArduinoCodeAssistant.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ArduinoCodeAssistant.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AcaWindow"
    Title="아두이노 코드 어시스턴트"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="450" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" MinWidth="220" />
        </Grid.ColumnDefinitions>
        <DockPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="20,30,20,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel DockPanel.Dock="Right">
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="연결 포트:" />
                    <TextBox
                        Width="200"
                        Height="30"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True"
                        Text="{Binding ArduinoPortStatus, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="기기 종류:" />
                    <TextBox
                        Width="200"
                        Height="30"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True"
                        Text="{Binding ArduinoNameStatus, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>

            <Button
                Margin="0,0,30,0"
                Padding="10"
                Command="{Binding DetectArduinoCommand}"
                Content="아두이노 감지"
                DockPanel.Dock="Right" />
        </DockPanel>
        <GroupBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,0,10,0"
            Header="명령 입력부">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" Margin="10,10,10,15">
                    <TextBlock
                        Margin="0,0,0,10"
                        DockPanel.Dock="Top"
                        Text="1. 현재 아두이노 보드 상태는? (ex. 3번 핀에 LED가 연결되어 있다.)" />
                    <TextBox
                        Padding="5"
                        AcceptsReturn="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Text="텍스트"
                        TextWrapping="Wrap" />
                </DockPanel>
                <DockPanel Grid.Row="1" Margin="10,0,10,10">
                    <TextBlock
                        Margin="0,0,0,10"
                        DockPanel.Dock="Top"
                        Text="2. 원하는 명령 입력" />

                    <Button
                        Margin="0,0,0,10"
                        Padding="10"
                        Content="음성 인식 시작"
                        DockPanel.Dock="Top" />
                    <TextBox
                        Padding="5"
                        AcceptsReturn="True"
                        DockPanel.Dock="Left"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Text="{Binding InputMessage.Message, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />

                </DockPanel>
            </Grid>
        </GroupBox>
        <DockPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="10">
            <CheckBox
                x:Name="AutoRequestCodeChk"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="자동 실행"
                DockPanel.Dock="Right" />
            <Button
                Padding="10"
                Command="{Binding SendChatMessageCommand}"
                Content="코드 생성 요청"
                DockPanel.Dock="Left"
                IsEnabled="{Binding ElementName=AutoRequestCodeChk, Path=IsChecked, Converter={StaticResource InverseBooleanConverter}}" />
        </DockPanel>
        <GridSplitter
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch" />
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="2"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="135" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" MinHeight="90" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <GroupBox
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,10"
                Padding="10"
                Header="LLM 출력부">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Column="0">
                        <TextBlock
                            Margin="0,0,0,5"
                            DockPanel.Dock="Top"
                            Text="코드" />
                        <TextBox
                            Padding="5"
                            AcceptsReturn="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Text="{Binding OutputMessage.Code}" />
                    </DockPanel>
                    <DockPanel Grid.Column="2">
                        <TextBlock
                            Margin="0,0,0,5"
                            DockPanel.Dock="Top"
                            Text="주석" />
                        <TextBox
                            Grid.Column="0"
                            Padding="5"
                            AcceptsReturn="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Text="{Binding OutputMessage.Description}" />
                    </DockPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="주석은  " />
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem>일반적인 길이로</ComboBoxItem>
                            <ComboBoxItem>자세하게</ComboBoxItem>
                            <ComboBoxItem>간략하게</ComboBoxItem>
                        </ComboBox>
                        <TextBlock VerticalAlignment="Center" Text="  서술" />
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GridSplitter
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Height="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                ResizeDirection="Rows" />
            <DockPanel
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="0,10,0,0">
                <DockPanel Margin="0,0,0,10" DockPanel.Dock="Top">
                    <CheckBox
                        x:Name="AutoRequestCommunicationChk"
                        Margin="10"
                        VerticalAlignment="Center"
                        Content="자동 실행"
                        DockPanel.Dock="Right" />
                    <Button
                        Padding="10"
                        Command="{Binding CompileAndUploadCodeCommand}"
                        Content="컴파일 및 업로드"
                        IsEnabled="{Binding ElementName=AutoRequestCommunicationChk, Path=IsChecked, Converter={StaticResource InverseBooleanConverter}}" />
                </DockPanel>
                <TextBox
                    Padding="5"
                    AcceptsReturn="True"
                    IsReadOnly="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Text="(읽기 전용) 로그 텍스트" />
            </DockPanel>
        </Grid>
    </Grid>
</Window>